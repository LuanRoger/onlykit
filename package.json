{
  "name": "onlykit",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "rolldown -c rolldown.config.ts -w",
    "build": "tsdown --config tsdown.config.ts",
    "lint": "biome lint",
    "lint:write": "biome lint --write",
    "format": "biome format",
    "format:write": "biome format --write",
    "check": "biome check",
    "check:write": "biome check --write",
    "gen:exports": "node ./scripts/generate-exports.mjs"
  },
  "bin": {
    "only": "./dist/cli/index.js"
  },
  "exports": {
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./server/node": {
      "types": "./dist/server/node/index.d.ts",
      "import": "./dist/server/node/index.js",
      "require": "./dist/server/node/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./dev": {
      "types": "./dist/dev/index.d.ts",
      "import": "./dist/dev/index.js",
      "require": "./dist/dev/index.cjs"
    },
    "./dev/ts-config/base.json": "./dist/dev/ts-config/base.json",
    "./dev/biome/biome.json": "./dist/dev/biome/biome.json"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@biomejs/biome": "2.2.0",
    "@hono/node-server": "^1.18.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "hono": "^4.9.2",
    "ky": "^1.8.2",
    "tsdown": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "~5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0"
  }
}
